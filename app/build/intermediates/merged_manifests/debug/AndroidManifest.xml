<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infostackresearch.homefit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- Require below permissions for reading sms and otp assist feature -->
    <!--
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustPan" >
        <activity android:name="com.infostackresearch.homefit.ui.PaymentActivity" />
        <activity
            android:name="com.infostackresearch.homefit.ui.MySubscriptionActivity"
            android:parentActivityName="com.infostackresearch.homefit.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.infostackresearch.homefit.ui.EditProfileActivity"
            android:parentActivityName="com.infostackresearch.homefit.ui.MainActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name="com.infostackresearch.homefit.ui.SignupActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name="com.infostackresearch.homefit.ui.PlanActivity"
            android:parentActivityName="com.infostackresearch.homefit.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.infostackresearch.homefit.ui.LoginActivity"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name="com.infostackresearch.homefit.ui.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.infostackresearch.homefit.ui.EquipmentsActivity"
            android:parentActivityName="com.infostackresearch.homefit.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.infostackresearch.homefit.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.infostackresearch.homefit.ui.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.payumoney.sdkui.ui.activities.PayUmoneyActivity"
            android:label="@string/title_activity_citrus"
            android:screenOrientation="portrait"
            android:theme="@style/PayumoneyAppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.payumoney.sdkui.ui.activities.ReviewOrderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PayumoneyAppTheme" />
        <activity
            android:name="com.payumoney.core.SdkWebViewActivityNew"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.payu.custombrowser.CBActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <service android:name="com.payu.custombrowser.services.SnoozeService" />

        <activity android:name="com.payu.custombrowser.PreLollipopPaymentsActivity" >
            <intent-filter>
                <data android:scheme="com.infostackresearch.homefit.success" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="com.infostackresearch.homefit.failure" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity android:name="com.payu.custombrowser.PrePaymentsActivity" />
        <activity
            android:name="com.payu.upisdk.upiintent.PaymentResponseUpiSdkActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.infostackresearch.homefit.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>